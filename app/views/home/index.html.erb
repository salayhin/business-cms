<div id="myCarousel" class="carousel slide">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
      <div class="fill" style="background-image:url('http://placehold.it/1900x1080&text=Slide One');"></div>
      <div class="carousel-caption">
        <h1>Modern Business - A Bootstrap 3 Template</h1>
      </div>
    </div>
    <div class="item">
      <div class="fill" style="background-image:url('http://placehold.it/1900x1080&text=Slide Two');"></div>
      <div class="carousel-caption">
        <h1>Ready to Style &amp; Add Content</h1>
      </div>
    </div>
    <div class="item">
      <div class="fill" style="background-image:url('http://placehold.it/1900x1080&text=Slide Three');"></div>
      <div class="carousel-caption">
        <h1>Additional Layout Options at <a href="http://startbootstrap.com">http://startbootstrap.com</a>
        </h1>
      </div>
    </div>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#myCarousel" data-slide="prev">
    <span class="icon-prev"></span>
  </a>
  <a class="right carousel-control" href="#myCarousel" data-slide="next">
    <span class="icon-next"></span>
  </a>
</div>

<div class="section">

  <div class="container">

    <div class="row">
      <% @services.each do |service| %>
          <div class="col-lg-4">
            <h2><%= service.title %></h2>
            <%= get_word_summery(service.description, 50).html_safe %>
            <a class="btn btn-link btn-sm" href="<%= service_path(service.id) %>">More <i class="fa fa-angle-right"></i></a>
          </div>
      <% end %>
    </div>
    <!-- /.row -->

  </div>
  <!-- /.container -->

</div>
<!-- /.section -->

<div class="section-colored text-center">

  <div class="container">

    <div class="row">
      <div class="col-lg-12">
        <%= get_word_summery(@about.description, 50).html_safe %>
        <a class="btn btn-link btn-sm" href="<%= about_path %>">More <i class="fa fa-angle-right"></i></a>
        <hr>
      </div>
    </div>
    <!-- /.row -->

  </div>
  <!-- /.container -->

</div>
<!-- /.section-colored -->

<div class="section">

  <div class="container">

    <div class="row">
      <div class="col-lg-12 text-center">
        <h2>Display Some Work on the Home Page Portfolio</h2>
        <hr>
      </div>
      <% @projects.each do |project| %>
          <div class="col-lg-4 col-md-4 col-sm-6">
            <%= link_to image_tag(project.image1_url(:list), :class => 'img-responsive img-home-portfolio'), project_path(project.id) %>
          </div>
      <% end %>
    </div>
    <!-- /.row -->

  </div>
  <!-- /.container -->

</div>
<!-- /.section -->

<% @products.each do |product| %>
    <div class="<%= product.priority == 1 ? 'section-colored' : 'section' %>">

      <div class="container">

        <div class="row">
          <% if product.priority == 1 %>
              <div class="col-lg-6 col-md-6 col-sm-6">
                <h2><%= product.title %></h2>
                <%= product.description.html_safe %>
              </div>
              <div class="col-lg-6 col-md-6 col-sm-6">
                <%= link_to image_tag(product.image_url(:main), :class => 'img-responsive'), product_path(product.id) %>
              </div>
          <% else %>
              <div class="col-lg-6 col-md-6 col-sm-6">
                <%= link_to image_tag(product.image_url(:main), :class => 'img-responsive'), product_path(product.id) %>
              </div>
              <div class="col-lg-6 col-md-6 col-sm-6">
                <h2><%= product.title %></h2>
                <%= product.description.html_safe %>
              </div>

          <% end %>
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container -->
    </div>
    <!-- /.section-colored -->
<% end %>

