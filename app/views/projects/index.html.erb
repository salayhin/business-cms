<div class="container">

  <div class="row">

    <div class="col-lg-12">
      <h1 class="page-header">Projects
      </h1>
      <ol class="breadcrumb">
        <li><%= link_to 'Home', root_path %>
        </li>
        <li class="active">Projects</li>
      </ol>
    </div>

  </div>
  <!-- /.row -->

  <div class="row">
    <% @projects.each do |project| %>
    <div class="col-md-4 portfolio-item">
      <a href="<%= project_path(project.id) %>">
        <% if project.image1.present? %>
            <%= image_tag(project.image1_url(:list), :class => 'img-responsive') %>
        <% else %>
            <img class="img-responsive" src="http://placehold.it/700x400">
        <% end %>
      </a>
      <h3><a href="<%= project_path(project.id) %>"><%= project.title %></a></h3>
      <%= get_word_summery(project.description, 30).html_safe %>
    </div>
    <% end %>
  </div>


  <hr>

  <div class="row text-center">

    <div class="col-lg-12">
      <%#= will_paginate @projects, :class => 'pagination' %>
    </div>

  </div>

</div>
<!-- /.container -->