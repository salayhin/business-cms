<div class="container">

  <div class="row">

    <div class="col-lg-12">
      <h1 class="page-header">Products
      </h1>
      <ol class="breadcrumb">
        <li><%= link_to 'Home', root_path %>
        </li>
        <li class="active">Products</li>
      </ol>
    </div>

  </div>
  <!-- /.row -->

  <div class="row">
    <% @products.each do |product| %>
    <div class="col-md-4 portfolio-item">
      <a href="<%= product_path(product.id) %>">
        <%= image_tag(product.image_url(:list), :class => 'img-responsive') %>
      </a>
      <h3><a href="<%= product_path(product.id) %>"><%= product.title %></a></h3>
      <%= get_word_summery(product.description, 30).html_safe %>
    </div>
    <% end %>
  </div>


  <hr>

  <div class="row text-center">

    <div class="col-lg-12">
      <%#= will_paginate @projects, :class => 'pagination' %>
    </div>

  </div>

</div>
<!-- /.container -->